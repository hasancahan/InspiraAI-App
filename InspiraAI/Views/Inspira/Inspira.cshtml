<script>
    document.getElementById("scrollButton").onclick = function () {
        const target = document.getElementById("target");
        const targetPosition = target.getBoundingClientRect().top + window.scrollY; // Hedef konumu
        const startPosition = window.scrollY; // Başlangıç konumu
        const distance = targetPosition - startPosition; // Mesafe
        const duration = 1000; // Animasyon süresi (ms)
        let startTime = null;

        function animation(currentTime) {
            if (startTime === null) startTime = currentTime;
            const timeElapsed = currentTime - startTime;
            const run = ease(timeElapsed, startPosition, distance, duration);
            window.scrollTo(0, run);
            if (timeElapsed < duration) requestAnimationFrame(animation);
        }

        function ease(t, b, c, d) {
            t /= d / 2;
            if (t < 1) return c / 2 * t * t + b;
            t--;
            return -c / 2 * (t * (t - 2) - 1) + b;
        }

        requestAnimationFrame(animation);
    };
</script>